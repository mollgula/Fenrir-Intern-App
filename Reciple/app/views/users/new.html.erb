<div class="container" style= "width: 300px;">
        <div class="row">
            <div class="form-signin col-xs-3">
                    <h1>新規登録</h1>
                <%= form_for(@user) do |f| %>
                    <%= render 'shared/error_messages' %>
                    <%= f.label :name %>
                    <%= f.text_field :name, class: 'form-control' %>
                    <%= f.label :email %>
                    <%= f.email_field :email, class: 'form-control' %>
                    <%= f.label :password %>
                    <%= f.password_field :password, class: 'form-control' %>
                    <%= f.label :password_confirmation, "もう一度パスワードを入力してください" %>
                    <%= f.password_field :password_confirmation, class: 'form-control' %>
                    <div class="py-3">
                        <%= f.submit "新規アカウントを作成する", class: "btn btn-primary form-control" %>
                    </div>
                <% end %>
                <p class="text-center">または</p>
                <div class="py-2 btn btn-primary form-control">
                    <%= link_to "ログインする", root_path, :style => "text-decoration: none; color: white;"%>
                </div>
            </div>
        </div>
</div>